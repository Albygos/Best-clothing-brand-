FROM php:8.2-apache

# Enable rewrite (needed later, but harmless now)
RUN a2enmod rewrite

# Set working dir
WORKDIR /var/www/html

# Copy project files
COPY . /var/www/html

# Make sure Apache user owns the files
RUN chown -R www-data:www-data /var/www/html

# Allow .htaccess to work in the document root
RUN sed -i 's/AllowOverride None/AllowOverride All/' /etc/apache2/apache2.conf

EXPOSE 80

CMD ["apache2-foreground"]
