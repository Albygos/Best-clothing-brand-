<IfModule mod_rewrite.c>
RewriteEngine On

# üìå Force HTTPS (Render & Proxy support)
RewriteCond %{HTTP:X-Forwarded-Proto} !https
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# =============================
# üîÅ Sitemap Handling (Safe for SEO)
# =============================

# Allow direct access to sitemap.php (no redirect)
RewriteRule ^sitemap\.php$ - [L]

# Redirect /sitemap.xml ‚Üí /sitemap.php
RewriteRule ^sitemap\.xml$ /sitemap.php [L,QSA]

# Redirect /sitemap ‚Üí /sitemap.php
RewriteRule ^sitemap$ /sitemap.php [L,QSA]

# Allow Googlebot, Bingbot, AdsBot to access sitemap.php without redirect
RewriteCond %{HTTP_USER_AGENT} (googlebot|bingbot|duckduckbot|adsbot-google) [NC]
RewriteRule ^sitemap\.php$ - [L]

# =================================
# üö® Cloaking / Landing Page Redirect Protection
# (Make sure sitemap is NEVER redirected to index.php)
# =================================
RewriteCond %{REQUEST_URI} ^/sitemap\.php$ [NC]
RewriteRule .* - [L]

# =============================
# üìÇ Normal Routing
# =============================
# Route all non-existing files to index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.php [L]
</IfModule>

# ===================================================
# üîê Security Headers
# ===================================================
<IfModule mod_headers.c>
Header always set X-Frame-Options SAMEORIGIN
Header always set X-Content-Type-Options nosniff
Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# üö´ Disable directory listing
Options -Indexes
