<IfModule mod_rewrite.c>
RewriteEngine On

# ==================================================
# üö´ Completely bypass sitemap.php AND sitemap.xml from ANY redirect or routing
# ==================================================
RewriteCond %{REQUEST_URI} ^/sitemap\.php$ [OR]
RewriteCond %{REQUEST_URI} ^/sitemap\.xml$
RewriteRule .* - [L]

# ==================================================
# üåê Force HTTPS (Render & Proxy support)
# ==================================================
RewriteCond %{HTTP:X-Forwarded-Proto} !https
RewriteCond %{REQUEST_URI} !^/sitemap(\.php|\.xml)$
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# ==================================================
# üîÅ Route /sitemap and /sitemap.xml to sitemap.php
# ==================================================
RewriteRule ^sitemap$ /sitemap.php [L,QSA]
RewriteRule ^sitemap\.xml$ /sitemap.php [L,QSA]

# ==================================================
# üõ° EXCLUDE Googlebot, Bingbot, AdsBot from ANY redirect
# ==================================================
RewriteCond %{HTTP_USER_AGENT} (googlebot|bingbot|duckduckbot|adsbot-google) [NC]
RewriteCond %{REQUEST_URI} ^/sitemap\.php$ [OR]
RewriteCond %{REQUEST_URI} ^/sitemap\.xml$
RewriteRule .* - [L]

# ==================================================
# üìÇ Normal Routing ‚Äî EXCLUDES sitemap first!
# ==================================================
RewriteCond %{REQUEST_URI} !(^/sitemap(\.php|\.xml)?$)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.php [L]

</IfModule>

# ===================================================
# üîê Security Headers
# ===================================================
<IfModule mod_headers.c>
Header always set X-Frame-Options SAMEORIGIN
Header always set X-Content-Type-Options nosniff
Header always set X-XSS-Protection "1; mode=block"
</IfModule>

Options -Indexes
